<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/AddContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add emergency contact"
        android:padding="10dp"
        android:background="@color/lightPrimaryText"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.yrdtechnologies.EmergencyContactFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.yrdtechnologies.FragmentEmergencyContact"
        tools:listitem="@layout/fragment_emergencycontact" />
</LinearLayout>

